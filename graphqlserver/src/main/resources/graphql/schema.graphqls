type Query {
    postById(id: ID): Post
    commentById(id: ID): Comment
    userById(id: ID): User
}

type Post {
    id: ID!
    user: User!
    title: String!
    content: String!
}

type Comment {
    id: ID!
    postId: ID!
    user: User!
    content: String!
}

type Replies {
    id: ID!
    parent: ID!
    user: User!
    content: String!
}

type User {
    id: ID
    username: String
}